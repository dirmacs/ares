# Server Configuration
HOST=127.0.0.1
PORT=3000
RUST_LOG=info

# Database
# Local-first database (libsql/SQLite)
# Examples: ./data/ares.db | file:./data/ares.db | :memory:
DATABASE_URL=./data/ares.db

# Optional: Turso/libsql cloud (set both to enable)
# TURSO_URL=libsql://<your-db>-<your-org>.turso.io
# TURSO_AUTH_TOKEN=<your_turso_token>

QDRANT_URL=http://localhost:6334
QDRANT_API_KEY=optional_api_key

# LLM Providers
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
OLLAMA_URL=http://localhost:11434

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRY=900  # 15 minutes
JWT_REFRESH_EXPIRY=604800  # 7 days
API_KEY=your_api_key_here

# MCP
MCP_SERVERS_PATH=./mcp-servers

# RAG
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
